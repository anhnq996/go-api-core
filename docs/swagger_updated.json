{
  "openapi": "3.0.0",
  "info": {
    "title": "ApiCore - User Management & Authentication API",
    "description": "API documentation cho hệ thống quản lý người dùng và xác thực",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@apicore.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/ping": {
      "get": {
        "summary": "Health Check",
        "description": "Kiểm tra trạng thái server",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Server đang hoạt động",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "pong"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "summary": "Lấy danh sách users với pagination và sort",
        "description": "Trả về danh sách users với hỗ trợ phân trang, sắp xếp và tìm kiếm",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Số trang (bắt đầu từ 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Số items per page (1-100)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Field để sort (name, email, created_at)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "name",
                "email",
                "created_at"
              ]
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Thứ tự sort",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "asc"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Từ khóa tìm kiếm",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách users",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserListResponse"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Không có quyền truy cập",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Tạo user mới",
        "description": "Tạo một user mới trong hệ thống, có thể kèm avatar",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Tên user"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email user"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "File avatar (hình ảnh)"
                  }
                },
                "required": [
                  "name",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User được tạo thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Không có quyền truy cập",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "get": {
        "summary": "Lấy thông tin user theo ID",
        "description": "Trả về thông tin chi tiết của một user",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID của user",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Thông tin user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Không có quyền truy cập",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User không tồn tại",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Cập nhật user",
        "description": "Cập nhật thông tin của một user, có thể kèm avatar mới",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID của user",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Tên user"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email user"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "File avatar mới (hình ảnh)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User được cập nhật thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Không có quyền truy cập",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User không tồn tại",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Xóa user",
        "description": "Xóa một user khỏi hệ thống",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID của user",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User được xóa thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Không có quyền truy cập",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User không tồn tại",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Đăng nhập",
        "description": "Đăng nhập vào hệ thống với email và password",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Đăng nhập thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "401": {
            "description": "Email hoặc password không đúng",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/register": {
      "post": {
        "summary": "Đăng ký tài khoản",
        "description": "Tạo tài khoản mới trong hệ thống",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Đăng ký thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "409": {
            "description": "Email đã tồn tại",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/refresh": {
      "post": {
        "summary": "Làm mới token",
        "description": "Làm mới access token bằng refresh token",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshTokenRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token được làm mới thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RefreshTokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "401": {
            "description": "Refresh token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "summary": "Đăng xuất",
        "description": "Đăng xuất khỏi hệ thống và vô hiệu hóa token hiện tại",
        "tags": [
          "Authentication"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Đăng xuất thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/logout-all": {
      "post": {
        "summary": "Đăng xuất tất cả thiết bị",
        "description": "Đăng xuất khỏi tất cả thiết bị và vô hiệu hóa tất cả token",
        "tags": [
          "Authentication"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Đăng xuất tất cả thiết bị thành công",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "401": {
            "description": "Token không hợp lệ hoặc đã hết hạn",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID của user"
          },
          "name": {
            "type": "string",
            "description": "Tên user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email user"
          },
          "avatar": {
            "type": "string",
            "nullable": true,
            "description": "Đường dẫn avatar"
          },
          "role_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "ID của role"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          },
          "email_verified_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Thời gian xác thực email"
          },
          "is_active": {
            "type": "boolean",
            "description": "Trạng thái hoạt động"
          },
          "last_login_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Thời gian đăng nhập cuối"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian tạo"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian cập nhật"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID của role"
          },
          "name": {
            "type": "string",
            "description": "Tên role"
          },
          "display_name": {
            "type": "string",
            "description": "Tên hiển thị"
          },
          "description": {
            "type": "string",
            "description": "Mô tả role"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian tạo"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian cập nhật"
          }
        }
      },
      "UserListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Trạng thái thành công"
          },
          "code": {
            "type": "string",
            "description": "Mã response"
          },
          "message": {
            "type": "string",
            "description": "Thông báo"
          },
          "data": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/User"
                }
              },
              "pagination": {
                "$ref": "#/components/schemas/Pagination"
              }
            }
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "description": "Trang hiện tại"
          },
          "per_page": {
            "type": "integer",
            "description": "Số items per page"
          },
          "total": {
            "type": "integer",
            "description": "Tổng số items"
          },
          "total_pages": {
            "type": "integer",
            "description": "Tổng số trang"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email đăng nhập"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "description": "Mật khẩu"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Trạng thái thành công"
          },
          "code": {
            "type": "string",
            "description": "Mã response"
          },
          "message": {
            "type": "string",
            "description": "Thông báo"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/User"
              },
              "access_token": {
                "type": "string",
                "description": "Access token"
              },
              "refresh_token": {
                "type": "string",
                "description": "Refresh token"
              },
              "expires_in": {
                "type": "integer",
                "description": "Thời gian hết hạn (giây)"
              }
            }
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "description": "Tên user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email đăng ký"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "description": "Mật khẩu"
          }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Trạng thái thành công"
          },
          "code": {
            "type": "string",
            "description": "Mã response"
          },
          "message": {
            "type": "string",
            "description": "Thông báo"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/User"
              },
              "access_token": {
                "type": "string",
                "description": "Access token"
              },
              "refresh_token": {
                "type": "string",
                "description": "Refresh token"
              },
              "expires_in": {
                "type": "integer",
                "description": "Thời gian hết hạn (giây)"
              }
            }
          }
        }
      },
      "RefreshTokenRequest": {
        "type": "object",
        "required": [
          "refresh_token"
        ],
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "Refresh token"
          }
        }
      },
      "RefreshTokenResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Trạng thái thành công"
          },
